@model IEnumerable<Martinn.Models.Product>

@{
    ViewData["Title"] = "Menu";
}


<h1>Items</h1>
<head>
    <style>
        /* Existing styles */

        /* Styling for specific buttons */
        .btn-black {
            background-color: #000;
            color: #fff;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            text-decoration: none;
        }

            .btn-black:hover {
                background-color: #333;
                color: #fff;
            }
    </style>

</head>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-black">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-black">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-black">Delete</a>
                </td>

        </tr>
}
    </tbody>
</table>
